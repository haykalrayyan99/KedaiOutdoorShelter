<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carrierOsprey">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="201dp"
            app:srcCompat="@drawable/carrier_osprey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/merek6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/merek_osprey"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/warna_tenda_eiger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Warna Abu-Abu"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/kapasitas_tenda_eiger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kapasitas 50 L"
                        android:textAlignment="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/harga6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/harga_osprey"
                            android:textAlignment="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/nama_pembeli"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nama Pembeli :"
                                android:textAlignment="center" />
                            <EditText
                                android:id="@+id/input_name"
                                android:hint=""
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <Button
                                android:onClick="healderBeli"
                                android:id="@+id/beli_carrier"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="beli" />

                            <TextView
                                android:id="@+id/text_output"
                                android:layout_width="match_parent"
                                android:layout_height="39dp" />

                            <TextView
                                android:id="@+id/mrk6"
                                android:layout_width="match_parent"
                                android:layout_height="35dp" />

                            <TextView
                                android:id="@+id/hrg6"
                                android:layout_width="match_parent"
                                android:layout_height="34dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>